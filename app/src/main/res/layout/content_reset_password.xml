<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/loginLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.engineering.nhub.ancaps_project.Login"
    tools:showIn="@layout/activity_reset_password"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:id="@+id/loginInnerLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimaryDark"/>


            <EditText
                android:id="@+id/etResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_border_button"
                android:ems="10"
                android:hint="@string/enter_email"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/icon_phone"
                android:drawablePadding="@dimen/margin_right"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="@dimen/padding_left"
                android:paddingRight="@dimen/padding_right"/>

            <!--<LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>-->
            <Button
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size"
                android:layout_marginTop="16dp"
                android:background="@drawable/blue_rounded_corners_bg"
                android:text="@string/reset_password"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:text="Back"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold|italic"/>

            <ProgressBar
                android:id="@+id/progress_Bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:backgroundTint="@android:color/white"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimaryDark"
                android:max="11"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
